@model webblog.Models.blogpost

<div class="container">
    <div class="row">
        <div class="col-md-7 col-md-offset-3 well">
            <h4 class="text-center">Delete</h4>

            <h5 class="text-center">Are you sure you want to delete this post?</h5>
            <div class="col-md-12">
                <hr class="defaulthr" />
                @if (Model.MediaURL != null)
                {
                    <br />
                    <div>
                        <a href="@Url.Content(Model.MediaURL)"><img src="@Url.Content(Model.MediaURL)" style="width:100%" /></a>
                    </div>
                }
                <br />
                <div class="text-center">
                    <strong>Title:</strong> @Model.Title<br />
                    <i class="fa fa-clock-o"></i> <strong>Created:</strong> @Model.Created.ToString("d") <br />
                </div>

                <hr class="defaulthr" />

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color text-center">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                        <a href="@Url.Action("Index", "blogposts")" class="btn btn-primary">Cancel</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
