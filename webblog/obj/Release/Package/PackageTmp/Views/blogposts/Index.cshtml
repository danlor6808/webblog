@model IEnumerable<webblog.Models.blogpost>

<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-8 well">
            @{ 
                int counter = 0;
                foreach (var post in Model.Reverse())
                {
                    if (post.Published)
                    {
                        if (counter >= 3)
                        {
                            break;
                        }
                <!-- Blog Post Content Column -->
                    <div class="col-lg-12 blogpost">
                        <!-- Blog Post -->
                        <!-- Title -->
                        <h2><a href="@Url.Action("Details", new { slug = post.Slug })">@post.Title</a></h2>

                        <!-- Author -->
                        <h6>
                            Written by Danny Lorn on @post.Created.ToString("d")
                        </h6>      
                        <hr class="defaulthr">
                        @{
                            if (String.IsNullOrEmpty(post.MediaURL))
                            {
                            }
                            else
                            {
                                <a href="@Url.Action("Details", new { slug = post.Slug })"><img src="@post.MediaURL" class="img-responsive" /></a>
                                    <hr class="defaulthr">
                            }
                        }       
                        <!-- Post Content -->
                        <p class="lead">@Html.Raw(@post.Body)</p>
                        <hr class="defaulthr">
                        <a href="@Url.Action("Details", new { slug = post.Slug })"><button class="btn btn-primary btn-x1" type="button">Read More</button></a>
                    </div>
                                        counter++;
                                    }
                                }
                            }

                <ul class="pager">
                    <li class="previous">
                        <a href="#" style="color: #388E8E ">← Older</a>
                    </li>
                    <li class="next">
                        <a href="#" style="color: #388E8E ">Newer →</a>
                    </li>
                </ul>
            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4 hidden-xs hidden-sm">
                <!-- Blog Search Well -->
                <div class="well">
                    <h4>Blog Search</h4>
                    <div class="input-group">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                    <!-- /.input-group -->
                </div>

                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Blog Categories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li>
                                    <a href="#">Category Name</a>
                                </li>
                                <li>
                                    <a href="#">Category Name</a>
                                </li>
                                <li>
                                    <a href="#">Category Name</a>
                                </li>
                                <li>
                                    <a href="#">Category Name</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li>
                                    <a href="#">Category Name</a>
                                </li>
                                <li>
                                    <a href="#">Category Name</a>
                                </li>
                                <li>
                                    <a href="#">Category Name</a>
                                </li>
                                <li>
                                    <a href="#">Category Name</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /.row -->
                </div>
            </div>
        </div>

    </div>
    <!-- /.row -->
</div>
<!-- /.container -->