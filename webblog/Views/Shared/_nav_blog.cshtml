@using Microsoft.AspNet.Identity

    <!--///////////////// Navigation Section ////////////////////-->
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Danny Lorn", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Blog", "Index", "blogposts")</li>
                            @Html.AntiForgeryToken()
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i></a>
                                <ul class="dropdown-menu">
                                    <li class="text-center">Hi @ViewData["DisplayName"]!</li>
                                    <li class="divider"></li>
                                    <li>@Html.ActionLink("Control Panel", "Index", "Manage")</li>
                                    <li>@Html.ActionLink("Manage All Posts", "Admin", "blogposts")</li>
                                    <li>@Html.ActionLink("Create New Post", "Create", "blogposts")</li>
                                    <li class="divider"></li>
                                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                }
                else if (Request.IsAuthenticated)
                {

                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Blog", "Index", "blogposts")</li>
                            @Html.AntiForgeryToken()
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i></a>
                                <ul class="dropdown-menu">
                                    <li class="text-center">Hi @ViewData["DisplayName"]!</li>
                                    <li class="divider"></li>
                                    <li>@Html.ActionLink("Control Panel", "Index", "Manage")</li>
                                    <li class="divider"></li>
                                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                }
                else
                {
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Blog", "Index", "blogposts")</li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Register Account", "Register", "Account")</li>
                                    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                                </ul>
                            </li>
                        </ul>
                       }

</div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
