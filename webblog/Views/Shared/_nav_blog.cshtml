@using Microsoft.AspNet.Identity

    <!--///////////////// Navigation Section ////////////////////-->
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Danny Lorn", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <form action="@Url.Action("Index", "blogposts")" id="popupSearch" style="display:none">
                                    <input type="search" name="query" value="">
                                    <input type="submit" style="display:none">
                                </form>
                            </li>
                            <li>
                                <a class="page-scroll" href="@Url.Action("Index","Home")#about">About</a>
                            </li>
                            <li>
                                <a class="page-scroll" href="@Url.Action("Index","Home")#resume">Resume</a>
                            </li>
                            <li>
                                <a class="page-scroll" href="@Url.Action("Index","Home")#portfolio">Portfolio</a>
                            </li>
                            <li>
                                <a class="page-scroll" href="@Url.Action("Index","Home")#contact">Contact</a>
                            </li>
                            <li>@Html.ActionLink("Blog", "Index", "blogposts")</li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @ViewData["DisplayName"]</a>
                                <ul class="dropdown-menu">
                                    <li class="text-center">@Html.ActionLink("Control Panel", "Index", "Manage")</li>
                                    <li class="text-center">@Html.ActionLink("Manage All Posts", "Admin", "blogposts")</li>
                                    <li class="text-center">@Html.ActionLink("Create New Post", "Create", "blogposts")</li>
                                    <li class="divider"></li>
                                    <li class="text-center">
                                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                        {
                                        @Html.AntiForgeryToken()
                                        <a href="javascript:document.getElementById('logoutForm').submit()" class="link sign-out"><i class="fa fa-sign-out"></i> Sign-out</a>
                                        }
                                    </li>
                                </ul>
                            </li>
                        </ul>
                }
                else if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <form action="@Url.Action("Index", "blogposts")" id="popupSearch" style="display:none">
                                <input type="search" name="query" value="">
                                <input type="submit" style="display:none">
                            </form>
                        </li>
                        <li>@Html.ActionLink("Blog", "Index", "blogposts")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @ViewData["DisplayName"]</a>
                            <ul class="dropdown-menu">
                                <li class="text-center">@Html.ActionLink("Control Panel", "Index", "Manage")</li>
                                <li class="divider"></li>
                                <li class="text-center">
                                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <a href="javascript:document.getElementById('logoutForm').submit()" class="link sign-out"><i class="fa fa-sign-out"></i> Sign-out</a>
                                    }
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <form action="@Url.Action("Index", "blogposts")" id="popupSearch" style="display:none">
                                <input type="search" name="query" value="">
                                <input type="submit" style="display:none">
                            </form>
                        </li>
                        <li>
                            <a class="page-scroll" href="@Url.Action("Index","Home")#about">About</a>
                        </li>
                        <li>
                            <a class="page-scroll" href="@Url.Action("Index","Home")#resume">Resume</a>
                        </li>
                        <li>
                            <a class="page-scroll" href="@Url.Action("Index","Home")#portfolio">Portfolio</a>
                        </li>
                        <li>
                            <a class="page-scroll" href="@Url.Action("Index","Home")#contact">Contact</a>
                        </li>
                        <li>@Html.ActionLink("Blog", "Index", "blogposts")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> Menu</a>
                            <ul class="dropdown-menu">
                                <li class="text-center">@Html.ActionLink("Register", "Register", "Account")</li>
                                <li class="divider"></li>
                                <li class="text-center"><a href="@Url.Action("Login", "Account")"><i class="fa fa-sign-in"></i> Sign-in</a></li>
                            </ul>
                        </li>
                    </ul>
                }

</div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
